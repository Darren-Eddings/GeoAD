<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/earth">

    <TextView
        android:id="@+id/patientListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        android:text="@string/patient_list_text"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/dark_grey"
        />

    <ListView
        android:id="@+id/patientList"
        android:layout_width="wrap_content"
        android:layout_height="460sp"
        android:layout_marginTop="35sp"
        android:layout_below="@id/patientListText"
        android:cacheColorHint="@color/light_grey"
        />

    <ImageButton
        android:id="@+id/addPatientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/patientList"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/orange"
        android:contentDescription="@string/add_button_text"
        android:src="@drawable/ic_add_geofence" />

    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logout_text"
        android:src="@drawable/ic_logout"
        android:backgroundTint="@color/orange"
        android:layout_below="@id/patientList"
        android:layout_toRightOf="@id/addPatientButton"
        android:layout_marginLeft="50sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"/>

</RelativeLayout>