<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/earth">
    <TextView
        android:id="@+id/geofenceInformationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        android:text="@string/geofence_information_text"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/dark_grey"
        />

    <GridLayout
        android:id="@+id/geofenceManagerGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:orientation="horizontal"
        android:layout_below="@id/geofenceInformationText"
        android:layout_marginTop="115sp">

        <ListView
            android:id="@+id/geofenceInformationFields"
            android:layout_width="100sp"
            android:layout_height="260sp"
            android:divider="#00000000"
            android:backgroundTint="@color/light_grey"
            />

        <ListView
            android:id="@+id/geofenceInformationList"
            android:layout_width="315sp"
            android:layout_height="260sp"
            android:divider="#00000000"
            android:backgroundTint="@color/light_grey"
            />

    </GridLayout>

    <GridLayout
        android:id="@+id/buttonManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/geofenceManagerGrid"
        android:columnCount="2"
        android:rowCount="1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/editGeofenceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:layout_marginRight="30sp"
            android:layout_marginTop="20sp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/dark_grey"
            />

        <ImageButton
            android:id="@+id/removeGeofenceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove_general"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20sp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/dark_grey"
            />

    </GridLayout>

    <ImageButton
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonManager"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:src="@drawable/ic_return_button"
        android:backgroundTint="@color/orange"
        android:textColor="@color/dark_grey"
        />

</RelativeLayout>