<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/earth">

    <TextView
        android:id="@+id/requestText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:text="@string/request_type_text"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/dark_grey"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240sp">

        <Button
            android:id="@+id/requestChange"
            android:layout_width="275sp"
            android:layout_height="60sp"
            android:text="@string/request_change_text"
            android:layout_margin="45sp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/dark_grey"/>

        <Button
            android:id="@+id/requestNew"
            android:layout_width="275sp"
            android:layout_height="60sp"
            android:text="@string/request_new_text"
            android:layout_margin="45sp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/dark_grey"/>

    </GridLayout>

</RelativeLayout>