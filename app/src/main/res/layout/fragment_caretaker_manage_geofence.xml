<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/manageGeofenceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        android:text="@string/manage_geofence_button_text"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <ListView
        android:id="@+id/geofenceList"
        android:layout_width="wrap_content"
        android:layout_height="455sp"
        android:layout_below="@id/manageGeofenceText"
        android:layout_marginTop="10sp"
        />

    <Button
        android:id="@+id/addGeofenceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/geofenceList"
        android:layout_marginTop="50sp"
        android:text="Open Map"
        />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addGeofenceButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="@string/return_button_text"
        />
</RelativeLayout>