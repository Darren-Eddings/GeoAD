<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/earth">

    <TextView
        android:id="@+id/accountSuccessText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:text="@string/request_confirm_text"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/dark_grey"/>

    <TextView
        android:id="@+id/continueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/accountSuccessText"
        android:layout_marginTop="175sp"
        android:gravity="center"
        android:text="@string/delivery_text"
        android:textSize="24sp"
        android:textColor="@color/light_grey"/>

    <Button
        android:id="@+id/submitConfirmButton"
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:layout_below="@id/continueText"
        android:text="@string/home_text"
        android:backgroundTint="@color/orange"
        android:textColor="@color/dark_grey"/>
</RelativeLayout>